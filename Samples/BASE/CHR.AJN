CLS

'キャラクタコードで「Interface」と指定
DIM CHARCODE$(8) = [ CHR$(73), CHR$(110), CHR$(116), CHR$(101), CHR$(114), CHR$(102), CHR$(97), CHR$(99) , CHR$(101) ] 

'1文字ずつ改行せずに表示
FOR I = 0 TO 8
	? CHARCODE$(I);
NEXT I
? ""

END
